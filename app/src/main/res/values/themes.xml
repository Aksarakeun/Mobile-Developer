<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Aksarakeun" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.Aksarakeun" parent="Base.Theme.Aksarakeun" />


    <style name="OutlinedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/outlined_edittext_background</item>
        <item name="android:textColor">@color/gray_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="LayoutTextFieldOutline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/noto_medium</item>
        <item name="hintTextColor">@color/gray_hint</item>
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/gray</item>
    </style>

    <style name="Theme.Aksarakeun.Appbar" >
        <item name="android:colorPrimaryDark">@color/blue</item>
        <item name="colorControlNormal">@color/black</item>
    </style>
</resources>